#!/bin/sh
# Usage: sync-home [user@]host ...
# Copy crucial dotfiles and scripts to one or more remote machines.
#
# Copyright (c) 2008 Ryan Tomayko <http://tomayko.com/about>
set -e

test -z "$1" || echo "$@" | grep -q -- '--help' && {
    echo "Usage: $0 [user@]host ..."
    exit 1
}

cd ~
for host in "$@"; do
    echo "sync: $host"
    rsync -avz --include-from=- --exclude='*' ./ "${host}:" <<FILES
+ /.inputrc
+ /.alias
+ /.screenrc
+ /.tmux.conf
+ /.vimrc
+ /.gvimrc
+ /.zshrc
+ /.vim
- /.vim/sessions
- /.vim/plugin/netrwPlugin.vim
- /.vim/plugin/ruby_debugger.vim
- /.vim/swap
- /.vim/.netrwhist
- /.vim/tmp
+ /.vim/backup
- /.vim/backup/**
+ /.vim/**
+ .zlogin
+ .oh-my-zsh
+ .oh-my-zsh/**
+ /.irssi
+ /.irssi/**

+ /bin
+ /bin/ack
+ /bin/lgrep
+ /bin/gzball
+ /bin/headers
+ /bin/markdown
+ /bin/memcached-tool
+ /bin/sync-home
+ /bin/tinyurl
+ /bin/rbconfig
+ /bin/rbdev
+ /bin/addr
+ /bin/gendiff
FILES
done
